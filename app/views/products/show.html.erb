<div class="pro_page">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-xs-12 col-sm-12">
          <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="product_item_view">
              <%= default_image @product %>
            </div>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="product_detail_view">
              <div class="pro_heading">
                <%= @product.name %>
                <span class="category">
                  <%= @product.name %>
                  <span id="stock_available">
                    <%= @product.status ? t(".available") : t("not_avilable") %>
                  </span>
                </span>
              </div>
              <div class="pro_price">
                <%= number_to_currency @product.price %>
              </div>

              <%= form_for @order_detail do |f| %>

              <div class="add_quantity_cart">
                <div class="quantity">
                  <div class="input-group">
                    <%= f.number_field :unit_quantity, value: Settings.one,
                      class: "form-control", min: Settings.one %>
                  </div>
                </div>
                <div class="butn-cart">
                  <%= f.hidden_field :product_id, value: @product.id %>
                  <%= f.submit t(".add_cart"), class: "btn btn-danger" %>
                </div>
              </div>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
